<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <title>Banco de Dados ABCash</title>
    </head>
    <body style="background-color: #343a40;">
        <% if (tabela == "usuarios") { %>
            <table class="table table-bordered table-responsive table-striped table-dark">
                <tr class = "d-flex">
                    <th class="col-4">Id</th>
                    <th class="col-8">Nome</th>
                </tr>
            <% if (banco) { %>
                <% banco.forEach(function(banco){ %>
                    <tr class = "d-flex">
                        <td class="col-4">
                            <a href="/tingames/abcash/respostas/usuario/<%= banco.id %>">
                                <%= banco.id %>
                            </a>
                        </td>
                        <td class="col-8"><%= banco.nome %></td>
                    </tr>
                <% }) %>
            <% } %>
        <% } %>
        <% if (tabela == "questoes") { %>
            <table class="table table-bordered table-responsive table-striped table-dark">
                <tr class = "d-flex">
                    <th class="col-12">Questão</th>
                </tr>
            <% if (banco) { %>
                <% banco.forEach(function(banco){ %>
                    <tr class = "d-flex">
                        <td class="col-12">
                            <a href="/tingames/abcash/respostas/questao/<%= banco.id %>">
                                <%= banco.id %>
                            </a>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        <% } %>
        <% if (tabela == "respostas") { %>
            <table class="table table-bordered table-responsive table-striped table-dark">
                <tr class = "d-flex">
                    <th class="col-2">
                        <a href = "/tingames/abcash/usuarios/">
                            Usuário
                        </a>
                    </th>
                    <th class="col-2">
                        <a href = "/tingames/abcash/questoes/">
                            Questão
                        </a>
                    </th>
                    <th class="col-5">
                        <a href = "/tingames/abcash/respostas/">
                            Resposta
                        </a>
                    </th>
                    <th class="col-3">Data</th>
                </tr>
            <% if (banco) { %>
                <% banco.forEach(function(banco){ %>
                    <tr class = "d-flex">
                        <td class="col-2"><%= banco.id_usuario %></td>
                        <td class="col-2"><%= banco.id_questao %></td>
                        <td class="col-5"><%= banco.resposta %></td>
                        <td class="col-3"><%= banco.data %></td>
                    </tr>
                <% }) %>
            <% } %>
        <% } %>
        </table>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>